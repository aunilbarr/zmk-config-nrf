#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    macros {
        test: test {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp N &kp I &kp ENTER>;
            label = "TEST";
        };
    };
    keymap {
        compatible = "zmk,keymap";
        default_layer {
            bindings = <
&kp SPACE  &bt BT_CLR &mo 1
            >;
        };
lower_layer {
            bindings = <
                &bt BT_SEL 0
                &bt BT_CLR    &trans
            >;
        };
    };
};
